pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Install Dependencies') {
            steps {
                bat 'composer install' // Substitua por qualquer comando que vocÃª precise
            }
        }

        stage('Run Tests') {
            steps {
                bat 'vendor\\bin\\phpunit' // Caminho para o PHPUnit no Windows
            }
        }

        stage('Publish Results') {
            steps {
                echo 'Publishing results...'
            }
        }
    }

    post {
        always {
            echo 'Cleaning up...'
        }
    }
}
