pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }
        stage('Install Dependencies') {
            steps {
                bat '"C:\\wamp64\\bin\\php\\php8.3.6\\php.exe" -r "copy(\\path\\to\\composer.phar, \'composer\');"'
                bat 'composer install'
            }
        }
        stage('Run Tests') {
            steps {
                bat 'phpunit'
            }
        }
    }
    post {
        always {
            echo 'Cleaning up...'
        }
    }
}
