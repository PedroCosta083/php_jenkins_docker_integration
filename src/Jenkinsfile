pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                git 'https://github.com/PedroCosta083/php_jenkins_docker_integration'
            }
        }
        stage('Install Dependencies') {
            steps {
                sh 'composer install' // ajuste conforme necessário
            }
        }
        stage('Run Tests') {
            steps {
                sh 'phpunit --testsuite=Unit' // ajuste conforme necessário
            }
        }
        stage('Publish Results') {
            steps {
                junit 'caminho/para/seus/relatorios/*.xml' // ajuste o caminho
            }
        }
    }

    post {
        always {
            echo 'Pipeline finished'
        }
    }
}
