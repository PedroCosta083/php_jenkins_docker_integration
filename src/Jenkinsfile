pipeline {
    agent any
    stages {
        stage('Checkout') {
            steps {
                // Verifica a branch main do reposit√≥rio
                git branch: 'main', url: 'https://github.com/PedroCosta083/php_jenkins_docker_integration.git'
            }
        }
        stage('Install Dependencies') {
            steps {
                // Usando o caminho do Composer corretamente
                bat 'C:\\composer\\composer install'
            }
        }
        stage('Run Tests') {
            steps {
                // Executando os testes PHPUnit
                bat 'C:\\wamp64\\bin\\php\\php8.3.6\\phpunit --configuration phpunit.xml'
            }
        }
    }
    post {
        always {
            echo 'Cleaning up...'
        }
    }
}
